{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "scripthost",
      "es5",
      "es6",
      "es7"
    ],
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/**"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "*"
      ]
    }
  },
  "exclude": [
    "./node_modules",
    "./dist/"
  ]
}
